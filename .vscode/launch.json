{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Lincah Language Program",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/debug-adapter/debug_adapter.lich",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "Build Lincah Language Runtime",
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceFolder}/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
